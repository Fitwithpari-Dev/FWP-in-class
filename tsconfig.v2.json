{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping for V2 clean architecture */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src-v2/*"],
      "@core/*": ["./src-v2/core/*"],
      "@infrastructure/*": ["./src-v2/infrastructure/*"],
      "@presentation/*": ["./src-v2/presentation/*"],
      "@shared/*": ["./src-v2/shared/*"]
    },

    /* Type checking */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Performance */
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.v2.tsbuildinfo"
  },
  "include": ["src-v2"],
  "exclude": ["node_modules", "build", "build-v2", "dist", "src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}