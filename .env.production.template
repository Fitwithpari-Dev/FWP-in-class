# FitWithPari Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-supabase-publishable-key

# Zoom Video SDK Configuration (Frontend only - no secrets)
VITE_ZOOM_SDK_KEY=your-zoom-sdk-key

# API Endpoints (AWS Lambda Function URLs)
VITE_API_ENDPOINT=https://your-lambda-api-gateway-url.execute-api.us-east-1.amazonaws.com/prod
VITE_ZOOM_TOKEN_ENDPOINT=https://your-lambda-function-url.lambda-url.us-east-1.on.aws

# Application Configuration
VITE_APP_URL=https://app.fitwithpari.com
VITE_DEFAULT_SESSION_NAME=fitwithpari-session

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_RECORDINGS=true
VITE_ENABLE_HEALTH_TRACKING=true

# Environment
NODE_ENV=production
VITE_NODE_ENV=production

# Optional: Performance Monitoring
VITE_SENTRY_DSN=your-sentry-dsn-url
VITE_ANALYTICS_ID=your-analytics-id

# Optional: Additional Security
VITE_APP_VERSION=1.0.0
VITE_BUILD_TIMESTAMP=build-timestamp-placeholder