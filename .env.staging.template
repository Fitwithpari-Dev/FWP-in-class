# FitWithPari Staging Environment Configuration
# Copy this file to .env.staging and fill in actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-staging-project-id.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-staging-supabase-publishable-key

# Zoom Video SDK Configuration (Frontend only - no secrets)
VITE_ZOOM_SDK_KEY=your-zoom-sdk-key

# API Endpoints (AWS Lambda Function URLs)
VITE_API_ENDPOINT=https://your-staging-lambda-api-gateway-url.execute-api.ap-south-1.amazonaws.com/staging
VITE_ZOOM_TOKEN_ENDPOINT=https://your-staging-lambda-function-url.lambda-url.ap-south-1.on.aws

# Application Configuration
VITE_APP_URL=https://classes.tribe.fit
VITE_DEFAULT_SESSION_NAME=fitwithpari-staging-session

# Feature Flags (More permissive for testing)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_RECORDINGS=true
VITE_ENABLE_HEALTH_TRACKING=true
VITE_ENABLE_DEBUG_LOGGING=true

# Environment
NODE_ENV=staging
VITE_NODE_ENV=staging

# Optional: Performance Monitoring
VITE_SENTRY_DSN=your-staging-sentry-dsn-url
VITE_ANALYTICS_ID=your-staging-analytics-id

# Optional: Additional Security
VITE_APP_VERSION=staging-build
VITE_BUILD_TIMESTAMP=build-timestamp-placeholder